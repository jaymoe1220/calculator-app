{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppName": {
      "type": "string",
      "defaultValue": "calculator-app",
      "metadata": {
        "description": "The name of the web app."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "East US2",
      "metadata": {
        "description": "The location of the web app."
      }
    },
    "hostingPlanName": {
      "type": "string",
      "defaultValue": "calculator-app-service-plan",
      "metadata": {
        "description": "The name of the hosting plan."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[parameters('hostingPlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "B1"
      },
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "DOCKER|calculatorappregistry.azurecr.io/calculator-app:v1"
        }
      }
    }
  ]
}


